    <parent>
        <artifactId>org.kevoree.extra.root</artifactId>
        <groupId>org.kevoree.extra</groupId>
        <version>1.0</version>
        <relativePath>../org.kevoree.extra.root/pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.kevoree.extra.androidplot</groupId>
       <artifactId>androidplot</artifactId>
       <version>0.4.4</version>


    <packaging>bundle</packaging>
    <name>Kevoree :: Extra :: Androidplot</name>

    <properties>
        <androidplot.local.file>${basedir}/src/main/resources/androidplot-core-0.4.4-release.jar</androidplot.local.file>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>truezip-maven-plugin</artifactId>
                <version>1.0-beta-5</version>
                <executions>
                    <execution>
                        <id>copy-out-files</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${androidplot.local.file}</directory>
                                    <outputDirectory>${project.build.directory}/dependency</outputDirectory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.5</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Version>${project.version}</Bundle-Version>
                        <Export-Package>com.androidplot.*</Export-Package>
                        <Import-Package>!com.androidplot.*,*;resolution:="optional"</Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>${project.build.directory}/dependency/com</directory>
                <targetPath>com</targetPath>
            </resource>
            <resource>
                <directory>${project.build.directory}/dependency/org</directory>
                <targetPath>org</targetPath>
            </resource>
        </resources>
    </build>


</project>
