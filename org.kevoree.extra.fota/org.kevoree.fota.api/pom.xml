<project>
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.kevoree.extra</groupId>
        <artifactId>org.kevoree.extra.fota</artifactId>
        <version>1.1-SNAPSHOT</version>
    </parent>

    <groupId>org.kevoree.extra</groupId>
    <artifactId>org.kevoree.extra.fota.api</artifactId>
    <version>1.1-SNAPSHOT</version>
    <name>Fota JAPI</name>

    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.6.4</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.kevoree.extra</groupId>
                                    <artifactId>org.kevoree.extra.fota.native.nix32</artifactId>
                                    <version>1.1-SNAPSHOT</version>
                                    <type>so</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>src/main/resources/nix32</outputDirectory>
                                    <destFileName>native.so</destFileName>
                                </artifactItem>
                                <!--
                                <artifactItem>
                                    <groupId>org.kevoree.extra</groupId>
                                    <artifactId>org.kevoree.extra.fota.native.osx</artifactId>
                                    <version>1.1-SNAPSHOT</version>
                                    <type>so</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>src/main/resources/osx</outputDirectory>
                                    <destFileName>native.so</destFileName>
                                </artifactItem>   -->
                                <artifactItem>
                                    <groupId>org.kevoree.extra</groupId>
                                    <artifactId>org.kevoree.extra.fota.native.nix64</artifactId>
                                    <version>1.1-SNAPSHOT</version>
                                    <type>so</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>src/main/resources/nix64</outputDirectory>
                                    <destFileName>native.so</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>



        </plugins>
    </build>
</project>